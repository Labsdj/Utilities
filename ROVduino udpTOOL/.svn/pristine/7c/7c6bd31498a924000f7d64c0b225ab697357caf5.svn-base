        public void sendUDP(bool P2P, bool broadcast, string ip, int port, string data)
        {
            UdpClient client = new UdpClient();
            byte[] packet = Encoding.ASCII.GetBytes(data);
            if(broadcast)
            {
                IPEndPoint groupEp = new IPEndPoint(IPAddress.Broadcast, 1228);
                client.Connect(groupEp);
                try
                {
                    client.Send(packet, packet.Length);
                }
                catch (Exception)
                {
                
                }
            }
            if(P2P)
            {
                try
                {
                    client.Send(packet, packet.Length, ip, port);
                }
                catch (Exception ex)
                {
                    Console.WriteLine(ex.Message);
                }
            }

            client.Close();

        }

